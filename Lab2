#include <stdio.h>

int main() {
    int sayi;

    printf("Bir sayı girin: ");
    scanf("%d", &sayi);

    // Sayının çift ya da tek olduğunu kontrol et
    if (sayi % 2 == 0) {
        printf("%d bir çift sayıdır.\n", sayi);
    } else {
        printf("%d bir tek sayıdır.\n", sayi);
    }

    return 0;
}
